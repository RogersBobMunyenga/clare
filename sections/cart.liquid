{% include 'cart-header' %}

<section class="cart-area section mt-5">
    <div class="cart shopping">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-2">
            <div class="block">
              <div class="product-list">
                <form method="post">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Item Name</th>
                        <th class="text-center">Quantity</th>
                        <th>Item Price</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        {% for line_item in cart.items %}
                        <tr>
                            <td>
                              <div class="product-info">
                                <img width="80" src="{{line_item.image | product_img_url: '1920x'}}" alt="">
                                <a href="{{line_item.url}}">{{line_item.title}}</a>
                              </div>
                            </td>
                            <td>
                                <input type="number" class="btn btn-default" name="updates[]" value="{{line_item_quantity}}" min="0" pattern="[0-9]">
                            </td>
                            <td>{{line_item.line_price | money}}</td>
                            <td>
                              <a class="product-remove" href="">Remove</a>
                            </td>
                          </tr>
                        {% endfor %}
                      
                    
                      
                    </tbody>
                  </table>
                  <div class="row justify-content-end cart-total">
                    <div class="col-md-2">
                      Total
                    </div>
                    <div class="col-md-2">
                      $500.00
                    </div>
                  </div>
                  <a href="checkout.html" class="btn btn-main pull-right">Checkout</a>
                  <a href="checkout.html" id="update-btn" class="btn btn-transparent pull-right">Update</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>