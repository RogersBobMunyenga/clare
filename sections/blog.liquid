
<section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center mb-3 pb-3">
        <div class="col-md-12 heading-section text-center ftco-animate">
          <h1 class="big">Blog</h1>
          <h2>Recent Blog</h2>
        </div>
      </div>
      <div class="row d-flex">
        
        
          
          {% for article in blog.articles %}


          <div class="col-md-4 d-flex ftco-animate">
            <div class="blog-entry align-self-stretch">
              <a href="{{ article.url }}" class="block-20" style="background-image: url('{{ article.image.src | image_url: width: '1920x' }}');">
              </a>
              <div class="text mt-3 d-block">
                <h3 class="heading mt-3"><a href="{{ article.url }}">{{ article.title }}</a></h3>
                <p card-text>
                  {% if article.excerpt.size > 0 %}
                        {{ article.excerpt }}
                      {% else %}
                        <p>{{ article.content | strip_html | truncate: 150 }}</p>
                      {% endif %}
                </p>
                              
                <div class="meta mb-3">
                  <div><a href="#">{{ article.created_at | date: "%a, %b %d, %y" }}</a></div>
                  <div><a href="#">{{ article.author }}</a></div>
                  <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                </div>
              </div>
            </div>
          </div>


       

         
