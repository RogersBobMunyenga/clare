<section class="ftco-section testimony-section bg-light">
    <div class="container">
              <div class="row justify-content-center mb-3 pb-3">
        <div class="col-md-12 heading-section text-center ftco-animate">
            <h1 class="big">{{section.setings.heading}}</h1>
        </div>
      </div>  
      {%- if section.blocks.size > 0 -%}
  {%- for block in section.blocks -%}  		
      <div class="row justify-content-center">
        <div class="col-md-8 ftco-animate">
            <div class="row ftco-animate">
                <div class="col-md-12">
                  <div class="carousel-testimony owl-carousel ftco-owl">
                    <div class="item">
                      <div class="testimony-wrap py-4 pb-5">
                        <div class="user-img mb-4" style="background-image: url('{{ section.settings.bg-image }}')">
                          <span class="quote d-flex align-items-center justify-content-center">
                            <i class="icon-quote-left"></i>
                          </span>
                        </div>
                        
                        <div class="text text-center">
                          {%- if block.settings.quote != blank -%}
                          <p class="mb-4">{{ section.settings.description}}</p>
                          {%- endif -%}
                         
                            {%- if block.settings.name != blank -%}
                          <p class="name">{{section.settings.name}}</p>
                          {%- endif -%}
                          {%- if block.settings.position != blank -%}
                          <span class="position">{{section.settings.position}}</span>
                          {%- endif -%}
                        </div>
                        
                      </div>
                    </div>
                    
                    
                  </div>
                </div>
              </div>
        </div>
      </div>
  {%- endfor -%}
{%- endif -%}
    </div>
  </section>
  
  

{% schema %}
{
  "name": "Testimonials",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
      {
        "type": "image_picker",
         "id": "bg-image",
           "label": " Season Sale Background Image"
           
       },
       {
        "type": "text",
         "id": "heading",
           "label": "Testimonial Title",
			"default": "Testimonial"
       },
        {
          "type": "richtext",
          "id": "description",
          "label": "Text",
          "default": "<p>A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country, in which roasted parts of sentences fly into your mouth.</p>"
        },
        {
          "type": "text",
          "id": "name",
           "label": "Customer Name",
            "default": "Roger Scott"
         },
         {
          "type": "text",
          "id": "position",
          "label": "Customer Position",
            "default": "Customer"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Text",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
